@Html.Partial("~/Views/Componentes/_LoadingPage.cshtml")

<div id="menu">
    <div class="row" style="height:60vh; display:flex; justify-content:space-evenly; align-items:center">
        <div class="col-12">
            @Html.Partial("~/Views/Componentes/_BotonesNavegacion.cshtml")
        </div>

        @*  MODULO DE CAJA*@
        <div class="col-lg-3 card border-secondary Sombra">
            <div style="display:flex; justify-content:center;">
                <img class="card-img-top CentrarImage" src="~/Content/assets/transaction.png" alt="CajaChica_Icon" style="width:40%">
            </div>

            <div class="card-body">
                <h5 class="card-title">CONTROL DE CAJA CHICA</h5>
                <p class="card-text">Crear movimientos de entrada y salida, cierres, consultas y reportes de caja.</p>

                <hr />

                <button v-on:click="ModuloMovimientos()" type="button" class="btn btn-info" style="width:100%"><i class="material-icons" style="margin-right:10px; vertical-align:bottom">play_for_work</i>Entrar</button>
            </div>
        </div>

        @*  MODULO DE REPORTES*@
        <div class="col-lg-3 card border-secondary Sombra">
            <div style="display:flex; justify-content:center;">
                <img class="card-img-top CentrarImage" src="~/Content/assets/graphic.png" alt="Reportes_Icon" style="width:40%">
            </div>
            <div class="card-body">
                <h5 class="card-title">MoniExtra</h5>
                <p class="card-text">Consultas, Análisis, Reportes y Funciones Adicionales, en los distintos módulos del Sistema MONICA.</p>

                <hr />

                <button v-on:click="ModuloReportes()" type="button" class="btn btn-info" style="width:100%"><i class="material-icons" style="margin-right:10px; vertical-align:bottom">play_for_work</i>Entrar</button>
            </div>
        </div>

        @*  MODULO DE ADMIMISTRACION*@
        <div class="col-lg-3 card border-secondary Sombra" id="moduloAdministracion">
            <div style="display:flex; justify-content:center;">
                <img class="card-img-top CentrarImage" src="~/Content/assets/management.png" alt="Reportes_Icon" style="width:40%">
            </div>
            <div class="card-body">
                <h5 class="card-title">Herramientas Administración</h5>
                <p class="card-text">Gestionar usuarios, permisos y demás.</p>

                <hr />

                <button v-on:click="ModuloAdministracion()" type="button" class="btn btn-info" style="width:100%"><i class="material-icons" style="margin-right:10px; vertical-align:bottom">play_for_work</i>Entrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        ConfigurarVentana();

        if (window.localStorage.getItem('Nivel') == 2)
            document.getElementById('moduloAdministracion').setAttribute('hidden', true);
    </script>
    <script src="~/Scripts/js/Menu.js"></script>
} 