@Html.Partial("~/Views/Componentes/_LoadingPage.cshtml")

<div id="message" style="position:absolute; left:0; width:100%" hidden>
    <div class="alert alert-danger mt-2" role="alert" style="display:flex; justify-content:center;">
        <h5 style="font-weight:bolder">Necesita logearse para validar sus credenciales.</h5>
    </div>
</div>

<div id="ServerMessageDiv" style="position:absolute; left:0; width:100%" hidden>
    <div class="alert alert-danger mt-2" role="alert" style="display:flex; justify-content:center;">
        <h5 id="serverLoginMessage" style="font-weight:bolder"></h5>
    </div>
</div>


<div id="divLog">
    @* FORM PARA CAMBIAR LA CONTRASEñA *@
    <div id="divCambiarContrasenia" style="height:90vh; display:flex; justify-content:center; align-items:center" hidden>
        <div class="col-lg-3 card border-secondary Sombra" style="background-color:white; padding:0">
            <div class="card-header">
                <h5>
                    <b>
                        Nueva Contraseña
                    </b>
                </h5>
            </div>

            <div style="padding: 20px;">
                <div class="form-group">
                    <label>Nueva Contraseña</label>
                    <input type="password" class="form-control" v-model="newPass" v-on:keyup.enter="CambiarContrasenia()" placeholder="Nueva Contraseña">
                </div>

                <button v-on:click="CambiarContrasenia()" class="btn btn-info" style="width:100%;">Cambiar</button>
            </div>
        </div>
    </div>

    @* FORM PARA LOGUEARSE *@
    <div id="log" style="height:90vh; display:flex; justify-content:center; align-items:center">
        <div class="col-lg-3 card border-secondary Sombra" style="background-color:white; padding:0">
            <div class="card-header">
                <h5>
                    <b>
                        Acceso
                    </b>
                </h5>
            </div>

            <div style="padding: 20px;">
                <div class="form-group">
                    <label for="inputPass">Número único de la empresa</label>
                    <input type="text" class="form-control" v-model="DivLog.empresaNumeroUnico" placeholder="Número empresa">
                    <label for="inputPass">Nombre de Usuario</label>
                    <input type="text" class="form-control" v-model="DivLog.user" placeholder="Nombre">

                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="chkRememberPass" v-model="DivLog.remember" checked>
                        <label class="form-check-label" for="chkRememberPass">Recordar usuario</label>
                    </div>

                    <label for="inputPass">Contraseña</label>
                    <input type="password" class="form-control" id="inputPass" v-model="DivLog.pass" v-on:keyup.enter="Log" placeholder="Contraseña">
                    <small id="badPass" class="form-text" style="color:red;" hidden>Datos Incorrectos.</small>
                </div>

                <button v-on:click="Log" class="btn btn-info" style="width:100%;">Acceso Local &nbsp;<i class="material-icons" style="padding:3px;">computer</i></button>
                <button  v-on:click="Log({remoto: true})" class="btn btn-secondary mt-2" style="width:100%;">Acceso a distancia &nbsp; <i class="material-icons" style="padding:3px;">cloud_queue</i></button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/js/Acceso.js"></script>
}