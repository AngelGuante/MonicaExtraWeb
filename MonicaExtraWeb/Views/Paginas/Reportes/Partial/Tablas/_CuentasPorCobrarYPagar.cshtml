    <table id="tablaEstadoCuentaCliente" class="table table-striped">
        <thead>
            <tr>
                <th style="text-align:right;" scope="col">Emisión</th>
                <th style="text-align:right;" scope="col">Vencimiento</th>
                <th scope="col" v-if="FILTROS.mostrarNCF">NCF</th>
                <th style="text-align:left;" scope="col">Descripción</th>
                <th style="text-align:left;" scope="col">Nombre</th>
                <th style="text-align:right;" scope="col">Días Transcurridos</th>
                <th style="text-align:right;" scope="col">Monto</th>
                <th style="text-align:right;" scope="col">Pagos Acumulados</th>
                <th style="text-align:right;" scope="col">Saldo</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="element in DATA">
                <td style="text-align:right;">{{ element.fecha_emision | FilterDateFormat }}</td>
                <td style="text-align:right;">{{ element.fecha_vcmto | FilterDateFormat }}</td>
                <td v-if="FILTROS.mostrarNCF">{{ element.ncf }}</td>
                <td style="text-align:left;">{{ element.descripcion_dcmto | FilterUppercase }}</td>
                <td style="text-align:left;">{{ element.nombre, | FilterUppercase }}</td>
                <td style="text-align:right;">{{ element.diasTrancurridos }}</td>
                <td style="text-align:right;">{{ element.monto | FilterStringToMoneyFormat }}</td>
                <td style="text-align:right;">{{ element.pagosAcumulados | FilterStringToMoneyFormat }}</td>
                <td style="text-align:right;">{{ element.balance | FilterStringToMoneyFormat }}</td>
        </tbody>
    </table>
