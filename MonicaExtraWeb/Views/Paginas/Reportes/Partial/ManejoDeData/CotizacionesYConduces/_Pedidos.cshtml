<div id="manejoDeData_Pedidos" class="card border-info mb-3 Sombra card-body text-info ml-3" style="padding: 0px 6px 10px 6px;" hidden>
    <div class="alert alert-danger" role="alert">
        Ventana aún en proceso
    </div>

    <h5 class="card-title" style="text-decoration:underline">Proceso de Crear</h5>

    <div style="margin-top: 10px;">
        <div class="row">
            <div class="col-12 col-lg-5">
                <div class="col-12 form-group">

                    <div class="row">
                        <div class="form-check col-2">
                            <input class="form-check-input" type="radio" id="ManejoDeData_crearPedido" value="pedido" checked @*v-model="tipoCierre"*@>
                            <label class="form-check-label" for="ManejoDeData_crearPedido">
                                Pedido
                            </label>
                        </div>

                        <div class="form-check col-3">
                            <input class="form-check-input" type="radio" disabled>
                            <label class="form-check-label">
                                Cotización
                            </label>
                        </div>

                        <div class="form-check col-3">
                            <input class="form-check-input" type="radio" disabled>
                            <label class="form-check-label">
                                Conduce
                            </label>
                        </div>
                    </div>

                    <div class="row" style="align-items:baseline;">
                        <div class="col-12 row">
                            <p class="font-weight-bold col-4 col-lg-2">Cliente</p>

                            <div class="col-auto col-10">
                                <div class="input-group row mb-2">
                                    <input type="text" class="form-control col-4" placeholder="Código" />
                                    <input type="text" class="form-control col-8" placeholder="Nombre" />
                                </div>
                            </div>
                        </div>

                        <input type="text" class="form-control col-11 mb-2" placeholder="Dirección" />
                        <input type="text" class="form-control col-11 mb-2" placeholder="Telefono" />
                        <input type="text" class="form-control col-11 mb-2" placeholder="Email" />
                    </div>

                    <div class="row" style="align-items:baseline;">
                        <p class="font-weight-bold col-12 col-lg-2">RNC</p>
                        <input type="text" class="form-control col-12 col-lg-3" placeholder="RNC" />

                        <p class="font-weight-bold col-12 col-lg-2">Vendedor</p>
                        <select class="form-control col-12 col-lg-4" @*v-model="Movimiento.Clasificancf"*@ disabled>
                            <option selected value="codProducto">Código Vendedor</option>
                        </select>
                    </div>

                    <div class="row" style="align-items:baseline;">
                        <select class="form-control col-12 col-lg-3 mr-4" @*v-model="Movimiento.Clasificancf"*@>
                            <option value="codProducto" disabled>Código Producto</option>
                            <option selected value="descProducto">Descripción Producto</option>
                        </select>

                        <div class="col-auto col-8">
                            <div class="input-group row">
                                <input type="text" class="form-control col-10" placeholder="valor" />
                                <input type="text" class="form-control col-2" placeholder="" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="row mt-2" style="align-items:baseline;">
                        <div class="Tables col-11">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Código</th>
                                        <th scope="col">Descripción</th>
                                        <th scope="col">Cantidad</th>
                                        <th scope="col">Precio</th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="item in empresas">
                                    </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr style="margin: 10px;" />
</div>