@Html.Partial("~/Views/Componentes/_LoadingPage.cshtml")

<div id="message" style="position:absolute; left:0; width:100%" hidden>
    <div class="alert alert-danger mt-2" role="alert" style="display:flex; justify-content:center;">
        <h5 style="font-weight:bolder">Necesita logearse para validar sus credenciales.</h5>
    </div>
</div>

<div id="divLog" style="height:90vh; display:flex; justify-content:center; align-items:center">
    <div class="col-lg-3 card border-secondary Sombra" style="background-color:white; padding:0">
        <div class="card-header">
            <h5>
                <b>
                    Acceso
                </b>
            </h5>
        </div>

        <div style="padding: 20px;">
            <div class="form-group">
                <label for="inputPass">Password</label>
                <input type="password" class="form-control" id="inputPass" v-model="DivLog.pass" v-on:keyup.enter="Log" placeholder="Password">
                <small id="badPass" class="form-text" style="color:red;" hidden>Contraseña Incorrecta.</small>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="chkRememberPass" v-model="DivLog.remember" checked>
                <label class="form-check-label" for="chkRememberPass">Recordar</label>
            </div>

            <button v-on:click="Log" class="btn btn-info" style="width:100%;">Submit</button>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/js/Acceso.js"></script>
}